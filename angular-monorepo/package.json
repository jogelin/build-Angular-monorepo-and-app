{
    "name": "@bamaa/monorepo",
    "version": "0.0.2",
    "private": true,
    "description": "",
    "homepage": "",
    "bugs": "",
    "author": "Jonathan Gelin <gelin.jonathan@gmail.com>",
    "license": "MIT",
    "scripts": {
      "//CLEAN": "****************************************************************************",
      "clean": "npm-run-all --parallel clean:*",
      "clean:dist": "rimraf ./dist",
      "clean:ng": "rimraf ./**/*.ngsummary.json & rimraf ./**/*.ngfactory.ts",
      "clean:log": "rimraf ./**/*.log",
      "//CODE STYLE": "****************************************************************************",
      "lint": "tslint -c tslint.json --type-check --project packages/tsconfig.json",
      "precommit": "npm run lint",
      "//GENERIC": "****************************************************************************",
      "all": "oao all",
      "oao": "oao",
      "all:dist": "oao all -s ./dist/lib-*/",
      "//LINK": "****************************************************************************",
      "link:all": "npm run all -- \"yarn link\"",
      "unlink:all": "npm run all \"yarn unlink\"",
      "link:dist": "npm run all:dist -- \"yarn link\"",
      "unlink:dist": "npm run all:dist \"yarn unlink\"",
      "//PROCESS": "****************************************************************************",
      "bootstrap": "oao bootstrap",
      "transpile": "ngc -p ./packages/tsconfig.json",
      "package": "npm run all -- \"rollup -c rollup.config.js\"",
      "copy": "ts-node ./scripts/copy.ts",
      "build": "npm-run-all clean bootstrap transpile package copy",
      "build:dev": "npm-run-all clean transpile package copy unlink:all link:dist",
      "publish": "ts-node ./scripts/publish.ts",
      "//DOCKER": "****************************************************************************",
      "_docker:build": "npm install yarn -g --progress=false && npm install && yarn run build",
      "_docker:test": "echo \"NOT IMPLEMENTED : npm run all -- yarn run test\"",
      "_docker:publish": "npm run pulish"
    },
    "repository": {
        "type": "git",
        "url": "git@github.com:jogelin/build-angular-monorepo-and-app.git"
    },
    "peerDependenciesPlaceholders": {
        "0.0.0-ANGULAR_VERSION_PLACEHOLDER": "^4.0.0-rc.1",
        "0.0.0-RXJS_VERSION_PLACEHOLDER": "^5.2.0"
    },
    "devDependencies": {
        "@angular/common": "^4.0.0-rc.1",
        "@angular/compiler": "^4.0.0-rc.1",
        "@angular/compiler-cli": "^4.0.0-rc.1",
        "@angular/core": "^4.0.0-rc.1",
        "@angular/forms": "^4.0.0-rc.1",
        "@angular/http": "^4.0.0-rc.1",
        "@angular/language-service": "^4.0.0-rc.1",
        "@angular/platform-browser": "^4.0.0-rc.1",
        "@angular/platform-server": "^4.0.0-rc.1",
        "@angular/router": "^4.0.0-rc.1",
        "@types/node": "^7.0.5",
        "bash-color": "^0.0.4",
        "npm-run-all": "^4.0.2",
        "oao": "^0.7.0",
        "rimraf": "^2.6.0",
        "rollup": "^0.41.4",
        "rollup-plugin-node-resolve": "^2.0.0",
        "rxjs": "^5.2.0",
        "shelljs": "^0.7.6",
        "ts-node": "^2.1.0",
        "typescript": "^2.1.6",
        "zone.js": "^0.7.6"
    }
}
