{
    "name": "@bamaa/monorepo",
    "version": "0.0.2",
    "private": true,
    "description": "",
    "homepage": "",
    "bugs": "",
    "author": "Jonathan Gelin <gelin.jonathan@gmail.com>",
    "license": "MIT",
    "scripts": {
        "//CLEAN": "****************************************************************************",
        "clean": "lerna clean --yes & npm-run-all clean:* --parallel",
        "clean:ng": "rimraf ./packages/**/*.ngsummary.json & rimraf ./packages/**/*.ngfactory.ts & rimraf ./packages/**/*.metadata.json",
        "clean:log": "rimraf ./packages/**/*.log",
        "clean:js": "rimraf ./packages/**/*.d.ts & rimraf ./packages/**/*.umd.js",
        "//CODE STYLE": "****************************************************************************",
        "lint": "tslint -c tslint.json --type-check --project packages/tsconfig.json",
        "precommit": "npm run lint",
        "//GENERIC": "****************************************************************************",
        "lerna": "lerna",
        "lerna:exec": "lerna exec --",
        "lerna:help": "lerna publish --help",
        "//LINK": "****************************************************************************",
        "link:all": "lerna exec -- yarn link",
        "unlink:all": "lerna exec -- yarn unlink",
        "//PROCESS": "****************************************************************************",
        "bootstrap": "lerna bootstrap",
        "transpile": "ngc -p ./packages/tsconfig.json",
        "package": "lerna exec -- ../../node_modules/.bin/rollup -c rollup.config.js",
        "extends": "lerna exec -- ../../node_modules/.bin/babel-node ../../scripts/extends-package.js  --presets es2015",
        "list": "ts-nodescripts/extends-package.ts ",
        "build": "npm-run-all clean bootstrap extends transpile package",
        "build:dev": "npm-run-all clean bootstrap transpile package link:all",
        "publish": "lerna publish --yes --skip-npm --skip-git --skip-temp-tag --repo-version"
    },
    "repository": {
        "type": "git",
        "url": "git@github.com:jogelin/build-angular-monorepo-and-app.git"
    },
    "devDependencies": {
        "@angular/common": "^4.0.0-rc.1",
        "@angular/compiler": "^4.0.0-rc.1",
        "@angular/compiler-cli": "^4.0.0-rc.1",
        "@angular/core": "^4.0.0-rc.1",
        "@angular/forms": "^4.0.0-rc.1",
        "@angular/http": "^4.0.0-rc.1",
        "@angular/language-service": "^4.0.0-rc.1",
        "@angular/platform-browser": "^4.0.0-rc.1",
        "@angular/platform-server": "^4.0.0-rc.1",
        "@angular/router": "^4.0.0-rc.1",
        "@types/node": "^7.0.5",
        "babel-cli": "^6.23.0",
        "bash-color": "^0.0.4",
        "globby": "6.1.0",
        "lerna": "2.0.0-beta.38",
        "npm-run-all": "^4.0.2",
        "rimraf": "^2.6.0",
        "rollup": "^0.41.4",
        "rollup-plugin-node-resolve": "^2.0.0",
        "rxjs": "^5.2.0",
        "typescript": "^2.1.6",
        "zone.js": "^0.7.6",
        "babel-preset-es2015": "^6.22.0"
    }
}
