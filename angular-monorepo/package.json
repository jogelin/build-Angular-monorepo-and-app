    "license": "MIT",
    "scripts": {
        "clean": "npm-run-all --parallel clean:*",
        "clean:dist": "rimraf ./dist",
        "clean:ng": "rimraf ./**/*.ngsummary.json & rimraf ./**/*.ngfactory.ts",
        "clean:log": "rimraf ./**/*.log",
        "//":"****************************************************************************",
        "all": "oao all -s ./packages/*/",
        "all:dist": "oao all -s ./dist/lib-*/",
        "//":"****************************************************************************",
        "link:all": "npm run all -- \"yarn link --offline\"",
        "unlink:all": "npm run all \"yarn unlink --offline\"",
        "link:dist": "npm run all:dist -- \"yarn link --offline\"",
        "unlink:dist": "npm run all:dist \"yarn unlink --offline\"",
        "//":"****************************************************************************",
        "bootstrap": "oao bootstrap -s ./packages/*/",
        "//":"****************************************************************************",
        "transpile": "ngc -p ./packages/tsconfig.json",
        "package": "npm run all -- \"rollup -c rollup.config.js\"",
        "copy": "ts-node ./scripts/copy.ts",
        "build": "npm-run-all clean bootstrap transpile package copy",
        "build:dev": "npm-run-all clean transpile package unlink:all link:dist",
        "//":"****************************************************************************",
        "publish": "npm run all:dist"
    },
    "repository": {
        "type": "git",
        "url": "git@github.com:jogelin/build-angular-monorepo-and-app.git"
    },
    "peerDependenciesPlaceholders": {
        "0.0.0-ANGULAR_VERSION_PLACEHOLDER": "^4.0.0-beta.8",
        "0.0.0-RXJS_VERSION_PLACEHOLDER": "^5.1.1"
    },
    "devDependencies": {
        "@angular/common": "^4.0.0-beta.8",
        "@angular/compiler": "^4.0.0-beta.8",
        "@angular/compiler-cli": "^4.0.0-beta.8",
        "@angular/core": "^4.0.0-beta.8",
        "@angular/forms": "^4.0.0-beta.8",
        "@angular/http": "^4.0.0-beta.8",
        "@angular/language-service": "^^4.0.0-beta.8",
        "@angular/platform-browser": "^4.0.0-beta.8",
        "@angular/platform-server": "^4.0.0-beta.8",
        "@angular/router": "^4.0.0-beta.8",
        "@types/node": "^7.0.5",
        "bash-color": "^0.0.4",
        "glob": "^7.1.1",
        "npm-run-all": "^4.0.1",
        "oao": "^0.5.4",
        "rimraf": "^2.5.4",
        "rollup": "^0.41.4",
        "rollup-plugin-node-resolve": "^2.0.0",
        "rxjs": "^5.1.1",
        "shelljs": "^0.7.6",
        "ts-node": "^2.1.0",
        "typescript": "^2.1.6",
        "zone.js": "^0.7.6"
    }
}
