{
    "compilerOptions": {
        "baseUrl": ".",
        "declaration": true,
        "stripInternal": true,
        "experimentalDecorators": true,
        "strictNullChecks": true,
        "noImplicitAny": true,
        "module": "es2015",
        "moduleResolution": "node",
        "outDir": "./dist",
        "sourceMap": false,
        "inlineSources": false,
        "target": "es5",
        "skipLibCheck": true,
        "lib": [
            "es2015",
            "dom"
        ],
        "paths": {
            "@angular/*": [
                "../../node_modules/@angular/*"
            ],
            "rxjs/*": [
                "../../node_modules/rxjs/*"
            ]
        },
        "typeRoots": ["../../node_modules/@types"]
    },
    "files": [
        "./index.ts"
    ],
    "exclude": [
        "node_modules"
    ],
    "angularCompilerOptions": {
        "strictMetadataEmit": true,
        "skipTemplateCodegen ": true
    }
}