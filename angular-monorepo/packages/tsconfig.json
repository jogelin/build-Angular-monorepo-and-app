{
    "compilerOptions": {
        "baseUrl": ".",
        "declaration": true,
        "stripInternal": true,
        "experimentalDecorators": true,
        "strictNullChecks": true,
        "noImplicitAny": true,
        "module": "es2015",
        "moduleResolution": "node",
        "sourceMap": false,
        "inlineSources": false,
        "target": "es5",
        "skipLibCheck": true,
        "rootDir": ".",
        "lib": [
            "es2015",
            "dom"
        ],
        "paths": {
            "@angular/*": [
                "../node_modules/@angular/*"
            ],
            "rxjs/*": [
                "../node_modules/rxjs/*"
            ],
            "@bamaa/*": [
                "./*"
            ]
        },
        "typeRoots": ["../node_modules/@types"]
    },
    "exclude": ["/**/index.d.ts"],
    "angularCompilerOptions": {
        "strictMetadataEmit": true,
        "skipTemplateCodegen ": true
    }
}
